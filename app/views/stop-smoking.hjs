<!DOCTYPE html>
<html>
  <head>
    <title>{{ pagetitle }}</title>
	
	<link rel="stylesheet/less" type="text/css" href="styles/styles.less" />
	<link href='http://fonts.googleapis.com/css?family=Roboto+Slab' rel='stylesheet' type='text/css'>
	<link href="styles/jquery-ui.min.css" rel="stylesheet">
	
    <script>document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')</script>
	<script src="js/libs/less-1.7.3.min.js"></script>
	<script src="js/libs/jquery-2.1.1.min.js"></script>
	<script src="js/libs/jquery-ui.min.js"></script>
	<script src="js/libs/jquery.parallax.js"></script>
	<script src="js/bootstrap.js"></script>
  </head>
  <body>
	<ul id="scene">
		<li class="layer" data-depth="0.10"><div class="background"></div></li>
		<li class="layer" data-depth="0">
			<h1 style="margin-top:100px;text-shadow:0px 2px 3px rgba(0,0,0,0.3);">Stop smoking calculator GOPRO!!!</h1>
			<style>
				.labels {
					position:absolute;
					text-shadow:0px 2px 3px rgba(0,0,0,0.3);
					font-size:20px;
					color:black;
					width:100%;
					margin-top:20px;
					line-height:25px;
					font-family:Courier;
					text-align:left;
					margin-left:40%;
				}
				.progress-bar {
					position:relative;
					width:90%;
					background-color:white;
					margin-top:100px;
					border-radius:5px;
					height:100px;
					margin-left:auto;
					margin-right:auto;
					box-shadow:0px 2px 3px rgba(0,0,0,0.3);
				}
				.progress {
					background-color:green;
					height:100px;
					border-radius:5px;
				}
			</style>
			<script>
			jQuery(document).ready(function($){
				var stopDate = new Date(2014, 7, 27, 10, 0, 0, 0);
				var moneyPerSecond = 0.00005208333;
				var moneyToSave = 500;
				
				var stayCalculatin = function(){
					var currentDate = new Date();
				
					var dif = stopDate.getTime() - currentDate.getTime()

					var Seconds_from_T1_to_T2 = dif / 1000;
					var Seconds_Between_Dates = Math.abs(Seconds_from_T1_to_T2);
					
					var moneySaved = moneyPerSecond * Seconds_Between_Dates;
					
					var percentage = (moneySaved * 100) / moneyToSave;
					
					$('.geld').html(moneySaved);
					$('.percentage').html(percentage);
					$('.progress').css('width', percentage + '%');
					setTimeout(function(){
						stayCalculatin();
					}, 50);
				};
				
				stayCalculatin();
				
			});
			</script>
			<div class="progress-bar">
				<div class="labels">
					Geld: <span class="geld"></span><br>
					Percentage: <span class="percentage"></span>
				</div>
				<div class="progress">
				</div>
			</div>
		</li>
	</ul>
  </body>
</html>